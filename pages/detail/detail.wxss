.detailbox{
  position: relative;
  width: 100vw;
  height: 100vh;
  background: url('http://video.cdn.edisonluorui.com/filmimgs/banner1.png');
  background-size: 100% 100%;
}
.detail{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.7);
}
.title{
  width: 670rpx;
  margin: 0 auto;
  margin-top: 132rpx;
  font-size: 40rpx;
  color: #fff;
  font-weight: 700;
}
.moneynum{
  width: 670rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
}
.intro{
  width: 670rpx;
  margin: 0 auto;
  margin-top: 95rpx;
  font-size: 24rpx;
  color: #fff;
}
.lockbox{
  position: absolute;
  top: 770rpx;
  left: 30rpx;
  font-size: 0;
}
.lockimg{
  display: inline-block;
  width: 109rpx;
  height: 109rpx;
  line-height: 109rpx;
  text-align: center;
  background: #fff;
  border-radius: 50%;
}
.lockimg image{
  display: inline-block;
  width: 47rpx;
  height: 54rpx;
  transform: translateY(27.5rpx);
}
.locktext{
  display: inline-block;
  margin-left: 10rpx;
  font-size:30rpx;
  font-weight: 500;
  transform: translateY(10rpx);
  color: #fff;
}
.freeplay{
  display: inline-block;
  padding-left: 20rpx;
  font-size:30rpx;
  font-weight: 500;
  /* padding:0 20rpx; */
  /* border-left: 1rpx solid #fff; */
  transform: translateY(10rpx);
  color: #FFD400;
}
.freeplay::before{
  content:'';
  display: inline-block;
  width: 3rpx;
  height: 26rpx;
  margin-right: 20rpx;
  transform: translateY(2rpx);
  background: #fff;
}
.publicbox{
  position: absolute;
  right: 72rpx;
  bottom: 88rpx;
  width: 96rpx;
  height: 96rpx;
  text-align: center;
  font-size: 0;
  background: linear-gradient(#3a21c7, #ac4ba1);
  border-radius: 50%;
}
.public{
  display: inline-block;
  width: 84rpx;
  height: 84rpx;
  transform: translateY(6rpx);
  background: #fff;
  border-radius: 50%;
}
.public image{
  display: inline-block;
  width: 76rpx;
  height: 76rpx;
  transform: translateY(4rpx);
  border-radius: 50%;
}
.alertcon{
  position: absolute;
  top: 0;
  left: 0;
  margin: 140rpx 100rpx;
  font-size: 36rpx;
  color: #2e2e2e;
}
.alertp{
  width: 415rpx;
  text-align: center;
  font-size: 34rpx;
  line-height: 58rpx;
  color: #2e2e2e;
  font-weight: 700;
  border-bottom: 2rpx #d1d1d1 dotted;
}
.alertp text{
  color: #ff5555;
}
.alertnum{
  font-size: 34rpx;
  color: #c2c2c2;
  text-align: center;
  font-weight: 200;
} 
.cardbox{
  position: fixed;
  top: 0;
  left: 0;
  font-size: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.7);
}
.cardback{
  width: 646rpx;
  height: 661rpx;
  margin: 0 auto;
  margin-top: 100rpx;
}
.cardback image{
  width: 100%;
  height: 100%;
}
.cardimg{
  position: absolute;
  top: 140rpx;
  width: 100%;
  /* height: 480rpx; */
  text-align: center;
  /* height: 214rpx; */
} 
.cardimg image{
  display: inline-block;
  width: 640rpx;
  height: 540rpx;
  /* margin: 0 auto; */
  /* width: 100%;
  height: 100%; */
}
.cardbtn{
  width: 366rpx;
  height: 71rpx;
  margin: 0 auto;
  margin-top: 100rpx;
  line-height: 71rpx;
  text-align: center;
  background: #ffd400;
  border-radius: 36rpx;
  font-size: 30rpx;
  color: #000;
}