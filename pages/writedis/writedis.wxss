.writebox{
  position: absolute;
  width: 100vw;
  height: 100vh;
  background: #F0F0F0;
}
.top{
  background: #fff;
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  box-sizing: border-box;
  /* margin: 0 27rpx; */
  /* border-bottom: 3rpx solid #000; */
}
.top::after{
  display: block;
  content: '';
  clear: both; 
  /* width: 696rpx; */
  /* height: 3rpx; */
  /* margin: 0 auto;
  background: #000; */
}
.toptitle{
  float: left;
  margin-left: 25rpx;
  font-size: 28rpx;
  color: #000;
  font-weight: 500;
}
.topstar{
  float: left;
  margin-left: 20rpx;
}
.topstar image{
  margin-left: 20rpx;
  width: 39rpx;
  height: 37rpx;
  transform: translateY(8rpx);
}
.topstar image:first-child{
  margin-left: 0;
}
.score{
  float: right;
  margin-right: 28rpx;
  font-size: 25rpx;
  color: #777;
}
.write{
  width: 100%;
  height: 307rpx;
  background: #fff;
  margin-top: 3rpx; 
}
.write textarea{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 26rpx;
  padding: 27rpx;
}
.btn{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
}
.unbtn{
  background: #cecece;
  color: #9f9f9f;
}
.acbtn{
  background: #FFD508;
  color: #010101;
}
