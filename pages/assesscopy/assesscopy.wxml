<!--pages/canvasedit/canvasedit.wxml-->
<view class='detailbox'>
    <canvas canvas-id="canvasedit"></canvas>
      <view class='detail'>
      <image src="{{gameresult.game.pic}}" class="bacurl"></image>
      <view class="pagename">
            <text>{{gameresult.result.title}}</text>
      </view> 
      <view class="score">
          <text>{{gameresult.result_score}}</text>
          <text class="scorepage">分</text>
      </view>
      <view class="analyse">
          <text class="analysename">性格分析:</text>
          <text wx:for="{{pageli}}" wx:key="{{index}}">{{item}}</text>
          <view class="sharename">分享给 <text> 异性 </text>好友看看你们的契合度吧！</view>
      </view>
      <view class="sharediv">
          <image src="../../img/shangchuan.png" bindtap="showshare"></image>
          <text bindtap="showshare">匹配好友</text>
          <text>|</text>
          <text bindtap='play'>再玩一次</text>
      </view>
    </view>
    <view class='disdatabox'>
      <discuss disdata="{{gameresult.comment}}"  gameid="{{gameresult.game.game_id}}" writedis="true"  
      times="{{gameresult.times}}"></discuss>
    </view>
    <view class='publicbox'>
      <view class='public' bindtap='toindex'>
        <image src='../../img/indexicon.png'></image>
      </view>
    </view>
    <view class='writedis' bindtap='writedis'>
      <view class='writeimg'>
        <image src='../../img/writedis.png'></image>
      </view>
      <view class='writetext'>写评价</view>
    </view>
    <view class='matebox' wx:if="{{matestate}}">
      <view class='matetitle'>
        <image src='../../img/matetitle.png'></image>
      </view>
      <view class='mateimg'>
        <image src='../../img/mateimg.jpg'></image>
      </view>
      <view class='mateclose' bindtap='closemate'>
        <image src='../../img/grayclose.png'></image>
      </view>
    </view>
    <block wx:if="{{alertdialog}}">
      <view class="dialogbox">
        <view class='dialog'>
          <image src='../../img/freeing.png'></image>
          <view class='close' bindtap='closealert'>
            <image src='../../img/close.png'></image>
          </view>
          <view class='alertcon'>
            <view class='alertp'>分享给好友解锁</view>
          </view>
          <view class='btn' bindtap='clickbtn'>找朋友</view>
          <button class='dialogsharebtn' open-type='share'></button>
        </view>
      </view>
    </block> 
    <block wx:if="{{cardstate}}">
      <view class='cardbox'>
        <view class='cardback'>
          <image src='../../img/cardback.png'></image>
        </view>
        <view class='cardimg'>
          <image src='../../img/card.gif'></image>
        </view>
        <view class='cardbtn' bindtap='unlock'>分享成功 点击继续</view>
      </view>
    </block>
    <view class="molealert" wx:if="{{condition}}">
      <view class="bottomalert" wx:if="{{condition}}"  animation='{{animationData}}'>
          <view class="relaytext">
          <button open-type="share" plain="true">111</button>
            <view class="coview">
                <image src="../../img/weixin.png"></image>
                <view>微信</view>
            </view>
            <view bindtap='tap' class="coview">
                <image src="../../img/pengyouquan.png"></image>
                <view>朋友圈</view>
            </view>
            <view class="coview" bindtap='totype' data-id="{{typeitem.id}}" data-name="{{typeitem.name}}">
                <image src="../../img/{{typeitem.id}}.jpg"></image>
                <view>{{typeitem.name}}</view>
            </view>
            <view class="coview" bindtap='showcon'>
                <image src="../../img/touxiang.png"></image>
                <view>潮人小罗</view>
            </view>
        </view>
        <view class="relayclose"  bindtap="shareless">取消</view>
      </view>
    </view>
    <block wx:if="{{concern}}">
      <view class='concernbox'>
        <concern bindcloseconcern="closeconcern"></concern>
      </view>
    </block>
    <view class="promptalert" wx:if="{{prompt}}" bindtap="promptnone">
      <view class="prompt">
          {{prompttitle}}
      </view>
    </view>  
</view>
